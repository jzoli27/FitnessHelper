<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repetitionWeightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="(+KG)" />


    <EditText
        android:id="@+id/repetitionWeightEt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repetitionWeightTv"
        android:layout_marginLeft="200dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/repetitionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/repetitionWeightTv"
        android:text="Ismétlés" />

    <EditText
        android:id="@+id/repetitionEt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repetitionTv"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/repetitionWeightEt"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/repetitionSerieTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Sorozat" />

    <EditText
        android:id="@+id/repetitionSerieEt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repetitionSerieTv"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/repetitionOptionsIv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_options"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/repetitionEt"/>

</RelativeLayout>