<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <EditText
        android:id="@+id/fmDetails_row_item_settingNameEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="Beállítás neve: "
        android:textSize="18sp"
        android:background="@null"/>

    <EditText
        android:id="@+id/fmDetails_row_item_settingValueEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fmDetails_row_item_settingNameEt"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Érték"
        android:textSize="18sp"
        android:background="@null"/>

    <ImageView
        android:id="@+id/fmDetails_row_item_optionsIv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_options" android:layout_toEndOf="@+id/fmDetails_row_item_settingValueEt"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>