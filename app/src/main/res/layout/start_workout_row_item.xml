    <TextView
        android:id="@+id/start_workout_row_item_excnameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/start_workout_row_item_optionsIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_options"
        android:layout_toRightOf="@+id/start_workout_row_item_excnameTv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/startworkout_repetition_item_infoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/start_workout_row_item_optionsIv"
        app:srcCompat="@drawable/ic_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/start_workout_row_item_Rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/start_workout_row_item_excnameTv">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>